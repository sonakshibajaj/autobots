
<table class = "new_form_table">
	<tr>
		<td>
			<%= render 'shared/error_messages' %>
			<%= form_for(@category) do |f| %>
			<div>
				<%= f.label :name %></br>
				<%= f.text_field :name %>
			</div>
			<div>
				<%= f.label :description %></br>
				<%= f.text_field :description %>
			</div>
			<div>
				<%= f.submit "Add Category"%>
			</div>
			<% end %>
		</td>
	</tr>
</table>

